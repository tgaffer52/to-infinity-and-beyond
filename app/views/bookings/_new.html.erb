<%= simple_form_for [jetpack, booking], html: { class: "booking-form p-3"} do |f| %>
  <%= f.input :booking_date, html5: true %>
  <%= f.input :comment, label: "Comments (100 characters max)" %>
  <a class="link-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Terms and Conditions</a>
  <%= render partial: "bookings/tos" %>
  <%= f.input :terms_and_conditions, as: :boolean, required: true, label: "I agree to the Terms and Conditions" %>
   <%= f.submit "Book now!", class: "btn btn-red w-100" %>
<% end %>
